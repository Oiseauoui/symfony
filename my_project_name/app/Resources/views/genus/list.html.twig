{#lesson 7 Entities, Twig and the Magic dot Syntax#}

{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th># of scientists</th>
            <th>Last updated</th>
        </tr>
        </thead>
        <tbody>
            {% for genus in genuses %}
                {#{{ dump(genus) }}#}
                <tr>
                    <td>
                        <a href="{{ path('genus_show', {
                            'slug':genus.slug
                        }) }}">{{ genus.name }}</a>
                    </td>

                    <td>{{ genus.speciesCount }}</td>

                    <td>
                        {{ genus.genusScientists|length }}
                        ({{ genus.getExpertScientists |length}} experts)

                    </td>
                    <td>
                        {{ genus.updatedAt|date('Y-m-d') }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
